{
  "name": "learn-scilla",
  "keywords": [
    "scilla",
    "smart contract",
    "zilliqa",
    "blockchain"
  ],
  "version": "0.1.0",
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "test:cov": "react-scripts test --coverage",
    "test:ci": "CI=true react-scripts test --coverage",
    "eject": "react-scripts eject",
    "prettier": "prettier \"**/*.+(ts|tsx|css)\"",
    "format": "npm run prettier -- --write",
    "validate": "npm run prettier -- --list-different && tsc --noEmit",
    "ci": "yarn validate && yarn test:ci",
    "deploy": "firebase deploy"
  },
  "dependencies": {
    "@types/jest": "^24.0.11",
    "@types/node": "^12.0.0",
    "@types/react": "^16.8.13",
    "@types/react-dom": "^16.8.3",
    "@types/react-redux": "^6.0.10",
    "@types/react-router-dom": "^4.3.1",
    "accessible-ui": "^3.1.6",
    "bootstrap": "^4.3.1",
    "classnames": "^2.2.6",
    "enzyme": "^3.9.0",
    "enzyme-adapter-react-16": "^1.12.1",
    "firebase": "^6.3.5",
    "husky": "^2.2.0",
    "i18next": "^12.1.0",
    "jest-styled-components": "^6.3.1",
    "prettier": "^1.18.2",
    "react": "^16.9.0",
    "react-dom": "^16.9.0",
    "react-ga": "^2.6.0",
    "react-helmet": "^5.2.1",
    "react-i18next": "8.3.8",
    "react-icons": "^3.7.0",
    "react-markdown": "^4.1.0",
    "react-monaco-editor": "0.25.1",
    "react-redux": "^5.1.1",
    "react-redux-firebase": "^2.3.0",
    "react-router": "^5.0.1",
    "react-router-dom": "^5.0.1",
    "react-scripts": "^3.1.1",
    "react-test-renderer": "^16.8.6",
    "redux": "^4.0.0",
    "redux-logger": "^3.0.6",
    "redux-persist": "^5.10.0",
    "styled-components": "^4.3.2",
    "typescript": "^3.4.5"
  },
  "jest": {
    "collectCoverageFrom": [
      "src/components/**/*.{ts,tsx}"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn validate && yarn test:ci"
    }
  },
  "repository": "https://github.com/noelyoo/learn-scilla",
  "author": "Noel Yoo <innovation.noel@gmail.com>",
  "license": "GPL-3.0",
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ]
}
